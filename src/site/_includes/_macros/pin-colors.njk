{% macro pinColors(colorIndex, required, placeholder) %}
<div class="pin-colors__field">
    <label for="pin-colors-{{colorIndex}}" class="pin-colors__label">Pin colour {{colorIndex}}</label>
    <div class="product__select-wrapper">
        <select name="colors" id="pin-colors-{{colorIndex}}" class="product__select" data-product-pin-colors="{{colorIndex}}" {% if required %}required{% endif %}>
            <option value="">None</option>
            <option value="Pink">Pink</option>
            <option value="Light Blue">Light Blue</option>
            <option value="Green">Green</option>
            <option value="Purple">Purple</option>
            <option value="White">White</option>
            <option value="Yellow">Yellow</option>
            <option value="Red">Red</option>
            <option value="Blue">Blue</option>
            <option value="Orange">Orange</option>
            <option value="Black">Black</option>
        </select>
        <svg class="product__select-icon" width="24" height="24" aria-hidden="true">
            <use xlink:href="/icons/sprite.svg#chevron"></use>
        </svg>
    </div>
</div>

<div class="product__field">
    <label for="map-key-{{colorIndex}}" class="product__label">Key text {{colorIndex}}</label>
    <input type="text" name="key" class="product__input" id="map-key-{{colorIndex}}" maxlength="35" {% if placeholder %}placeholder="{{placeholder}}"{% endif %} {% if required %}required{% endif %}>
</div>
{% endmacro %}
