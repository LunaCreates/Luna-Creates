{% import "_macros/pin-colors.njk" as pinMapColors %}

<form class="product__form" data-product-form>
    <div class="product__field">
        <label for="map-size" class="product__label">Choose your map size</label>
        <div class="product__select-wrapper">
            <select name="size" id="map-size" class="product__select" data-product-variants>
            {% for option in product.options %}
                <option value="{{option.value}}" data-name="{{option.name}}" data-id="{{option.id}}">{{option.value}}</option>
            {% endfor %}
            </select>
            <svg class="product__select-icon" width="24" height="24" aria-hidden="true">
                <use xlink:href="/icons/sprite.svg#chevron"></use>
            </svg>
        </div>
    </div>

    <div class="product__personalisation">
        <h2 class="product__personalisation-title">Personalisation</h2>
        <p class="product__body">Preview your personalised map key before you buy.</p>

        <div class="product__field">
            <label for="map-title" class="product__label">Give your map a title</label>
            <input type="text" name="title" class="product__input" placeholder="E.g. Mark &amp; Emma's world travels" id="map-title" data-product-map-title required>
        </div>

        <p class="product__label">Key text</p>

        <div class="product__radios">
            <label class="product__radio" for="map-key-no">
                <input class="product__radio-input" type="radio" id="map-key-no" name="show key text" value="no" data-map-key checked>
                No
            </label>

            <label class="product__radio" for="map-key-yes">
                <input class="product__radio-input" type="radio" id="map-key-yes" name="show key text" value="yes" data-map-key>
                Yes
            </label>
        </div>

        <p class="product__label">Select your pin colours</p>

        <div class="pin-colors" data-pin-colors>
            {{pinMapColors.pinColorsIndex('1', true, 'Alex\'s travels')}}
            {{pinMapColors.pinColorsIndex('2', true)}}
            {{pinMapColors.pinColorsIndex('3', true)}}
            {{pinMapColors.pinColorsIndex('4')}}
            {{pinMapColors.pinColorsIndex('5')}}
            {{pinMapColors.pinColorsIndex('6')}}
        </div>

        <button type="submit" class="product__button" data-product-submit>View my key</button>
    </div>
</form>
