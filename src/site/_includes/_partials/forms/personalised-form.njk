        margin-left: -5px;
        position: absolute;
        top: 50%;
      }

      .pin-colors-new .selected-pins .product__radio-input#map-key-yes:checked ~ .pin-row p {
        display: none;
      }

      .pin-colors-new .selected-pins .product__radio-input#map-key-no:checked ~ .pin-row input {
