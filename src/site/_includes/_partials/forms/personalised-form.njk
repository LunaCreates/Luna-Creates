      .button-container {
        margin-top: 2em;
      }

      .button-container button {
        margin: 0 auto;
      }

      /* Pins */
      .pin-colors-new {
        margin: 1em 0;
      }

      .pin-colors-new .selected-pins {
        margin-top: 1em;
      }

      .pin-colors-new .selected-pins > p {
        margin-bottom: 0;
      }

      .pin-colors-new .selected-pins > .product__label {
