{% set variant = product.options[0] %}

<form class="mt-24" data-product-form data-variant-id="{{variant.id}}">
    <div class="relative mb-32">
        <label for="table-title" class="text-sm leading-sm fvs-md inline-block mb-8 text-tertiary">Title for Table Plan</label>
        <input type="text" name="table title" class="product__input text-sm leading-sm fvs-rg block py-8 px-16 text-grey-neutral w-full" placeholder="e.g. John &amp; Jane's Wedding" id="table-title" required>
    </div>

    <div class="relative mb-32">
        <label for="table-date" class="text-sm leading-sm fvs-md inline-block mb-8 text-tertiary">Date of Wedding</label>
        <input type="text" name="wedding date" class="product__input text-sm leading-sm fvs-rg block py-8 px-16 text-grey-neutral w-full" placeholder="e.g. 25th December 2020" id="table-date" required>
    </div>

    <div class="relative mb-32">
        <label for="table-number" class="text-sm leading-sm fvs-md inline-block mb-8 text-tertiary">Number of Tables</label>
        <div class="relative">
            <select name="table numbers" id="table-number" class="product__select text-sm leading-sm fvs-rg block py-8 pr-32 pl-16 text-grey-neutral w-full" required>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
                <option value="10">10</option>
                <option value="11">11</option>
                <option value="12">12</option>
                <option value="13">13</option>
                <option value="14">14</option>
                <option value="15">15</option>
                <option value="16">16</option>
                <option value="17">17</option>
                <option value="18">18</option>
                <option value="19">19</option>
                <option value="20">20</option>
            </select>
            <svg class="product__select-icon absolute pointer-events-none" width="24" height="24" aria-hidden="true">
                <use xlink:href="/icons/sprite.svg#chevron"></use>
            </svg>
        </div>
    </div>

    <div class="relative mb-32">
        <label for="table-names" class="text-sm leading-sm fvs-md inline-block mb-8 text-tertiary">Table Names</label>
        <textarea name="table names" id="table-names" class="product__textarea text-sm leading-sm fvs-rg block py-8 px-16 text-grey-neutral w-full" placeholder="e.g. Table 1 = England, Table 2 = Italy, etc." required></textarea>
    </div>

    <div class="relative mb-32">
        <label for="table-guests" class="text-sm leading-sm fvs-md inline-block mb-8 text-tertiary">Guest Names per Table</label>
        <textarea name="guest names" id="table-guests" class="product__textarea text-sm leading-sm fvs-rg block py-8 px-16 text-grey-neutral w-full" placeholder="Table 1 = John Mann, Jane Mann, Jo Ede etc. &#10;Table 2 = Jane Smith, Steve Smith, etc." required></textarea>
    </div>

    <div class="relative mb-32">
        <label for="table-colour" class="text-sm leading-sm fvs-md inline-block mb-8 text-tertiary">Colour Theme</label>
        <div class="relative">
            <select name="color theme" id="table-colour" class="product__select text-sm leading-sm fvs-rg block py-8 pr-32 pl-16 text-grey-neutral w-full" required>
                <option value="Navy Blue">Navy Blue</option>
                <option value="Blush Pink">Blush Pink</option>
                <option value="Platinum Grey">Platinum Grey</option>
                <option value="Mint">Mint</option>
                <option value="Olive Green">Olive Green</option>
            </select>
            <svg class="product__select-icon absolute pointer-events-none" width="24" height="24" aria-hidden="true">
                <use xlink:href="/icons/sprite.svg#chevron"></use>
            </svg>
        </div>
    </div>

    <div class="relative mb-32">
        <label for="quantity" class="text-sm leading-sm fvs-md inline-block mb-8 text-tertiary">Quantity</label>
        <input type="number" id="quantity" name="quantity" value="1" min="1" class="product__input text-sm leading-sm fvs-rg block py-8 px-16 text-grey-neutral w-1/4" pattern="[0-9]*">
    </div>

    <button type="submit" class="bg-secondary text-foreground text-xs leading-xs fvs-md py-16 px-24 rounded-5 uppercase tracking-1 outline-transparent focus:outline-primary hov:hover:bg-secondary">Add to basket</button>
</form>
