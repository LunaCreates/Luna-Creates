<section class="instagram-collection instagram-collection--container" aria-describedby="instagram-collection">
    <h2 class="instagram-collection__title" id="instagram-collection">Follow us on Instagram <a href="{{settings.instagramUrl}}" class="instagram-collection__link">@{{settings.instagramName}}</a></h2>

    <ul class="instagram-collection__images">
    {% for item in instagramCollection %}
        <li class="instagram-collection__item">
            <picture class="instagram-collection__picture">
                <source media="(max-width: 37.4375em)" type="image/webp" data-srcset="{{item.image}}_150x150.jpg.webp 1x, {{item.image}}_250x250.jpg.webp 2x">

                <source media="(max-width: 37.4375em)" data-srcset="{{item.image}}_150x150.jpg 1x, {{item.image}}_250x250.jpg 2x">

                <source type="image/webp" data-srcset="{{item.image}}_350x350.jpg.webp 1x, {{item.image}}_400x400.jpg.webp 2x">

                <img class="instagram-collection__image lazyload" data-srcset="{{item.image}}_350x350.jpg 1x, {{item.image}}_400x400.jpg 2x" alt="Wedding Table Plan" loading="lazy" width="200" height="200">

                <noscript>
                    <source media="(max-width: 37.4375em)" type="image/webp" srcset="{{item.image}}_150x150.jpg.webp 1x, {{item.image}}_250x250.jpg.webp 2x">

                    <source media="(max-width: 37.4375em)" srcset="{{item.image}}_150x150.jpg 1x, {{item.image}}_250x250.jpg 2x">

                    <source type="image/webp" srcset="{{item.image}}_350x350.jpg.webp 1x, {{item.image}}_400x400.jpg.webp 2x">

                    <img class="instagram-collection__image" srcset="{{item.image}}_350x350.jpg 1x, {{item.image}}_400x400.jpg 2x" alt="Wedding Table Plan" loading="lazy" width="200" height="200">
                </noscript>
            </picture>
            <a class="instagram-collection__item-link" href="https://www.instagram.com/lunacreatesdesign/">View more images on our Instagram</a>
        </li>
    {% endfor %}
    </ul>
</section>
