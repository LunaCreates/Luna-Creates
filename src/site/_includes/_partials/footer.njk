<footer class="footer" id="footer">
    <div class="footer__container">
        <ul class="footer__list">
            <li class="footer__item footer__item--title">Customer Service</li>
            <li class="footer__item"><a href="/delivery/" class="footer__link">Delivery Information</a></li>
            <li class="footer__item"><a href="/faqs/" class="footer__link">FAQ</a></li>
            <li class="footer__item"><a href="/returns/" class="footer__link">Returns &amp; Refunds</a></li>
            <li class="footer__item"><a href="/privacy-policy/" class="footer__link">Privacy &amp; Legals</a></li>
        </ul>

        <ul class="footer__list">
            <li class="footer__item footer__item--title">Contact Us</li>
            <li class="footer__item"><a href="mailto:{{settings.email}}" class="footer__link">{{settings.email}}</a></li>

        {% for item in settings.social %}
            <li class="footer__item footer__item--social">
                <a class="footer__link footer__link--social" href="{{item.url}}" title="{{item.title-attr}}" rel="external" aria-label="{{this.title}}">
                    <svg class="footer__icon" width="20" height="20" aria-hidden="true">
                        <use xlink:href="/icons/sprite.svg#{{item.slug}}"></use>
                    </svg>
                </a>
            </li>
        {% endfor %}

        {% include "_partials/payment-icons.njk" %}
        </ul>

        <form action="/.netlify/functions/newsletter/" class="footer__form" accept-charset="UTF-8" method="post" id="newsletter" data-component="newsletter">
            <legend class="footer__legend">Let's Be Friends</legend>

            <label class="footer__label" for="footer-newsletter">Be the first to know about all our latest offers</label>
            <input type="email" placeholder="Email address" name="email" class="footer__input" id="footer-newsletter" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$" required>
            <button type="submit" class="footer__submit">Sign Up</button>
        </form>

        <div class="footer__bottom">
            <svg class="footer__logo" width="173" height="64" aria-labelledby="footer-logo">
                <title id="footer-logo">Luna Creates</title>
                <image xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/images/logo.svg" x="0" y="0" width="100%" height="100%" alt="Luna Creates logo"></image>
            </svg>
            <small class="footer__copyright">&copy; 2020, {{settings.name}}</small>
        </div>
    </div>
</footer>
