<footer class="footer">
    <div class="footer__container">
        <ul class="footer__list">
            <li class="footer__item footer__item--title">Customer Service</li>
            <li class="footer__item"><a href="/delivery/" class="footer__link">Delivery Information</a></li>
            <li class="footer__item"><a href="/faqs/" class="footer__link">FAQ's</a></li>
            <li class="footer__item"><a href="/returns/" class="footer__link">Returns &amp; Refunds</a></li>
            <li class="footer__item"><a href="/privacy-policy/" class="footer__link">Privacy &amp; Legals</a></li>
        </ul>

        <ul class="footer__list">
            <li class="footer__item footer__item--title">Contact Us</li>
            <li class="footer__item"><a href="mailto:{{settings.email}}" class="footer__link">{{settings.email}}</a></li>
        {{#each settings.social}}
            <li class="footer__item footer__item--social"><a class="footer__link footer__link--social" href="{{this.url}}" title="{{this.title-attr}}" rel="external">
                <svg class="footer__icon" width="20" height="20" aria-hidden="true">
                    <title>{{this.title}}</title>
                    <image xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/icons/{{this.slug}}.svg" x="0" y="0" width="100%" height="100%"></image>
                </svg>
            </a></li>
        {{/each}}
        </ul>

        <ul class="footer__list">
            <li class="footer__item footer__item--title">Contact Us</li>
            <li class="footer__item"><a href="mailto:{{settings.email}}" class="footer__link">{{settings.email}}</a></li>
            {{#each settings.social}}
            <li class="footer__item footer__item--social"><a class="footer__link footer__link--social" href="{{this.url}}"
                    title="{{this.title-attr}}" rel="external">
                    <svg class="footer__icon" width="20" height="20" aria-hidden="true">
                        <title>{{this.title}}</title>
                        <image xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/icons/{{this.slug}}.svg" x="0" y="0"
                            width="100%" height="100%"></image>
                    </svg>
                </a></li>
            {{/each}}
        </ul>

        <div class="footer__bottom">
            <svg class="footer__logo" width="173" height="64" aria-describedby="footer-logo">
                <title id="footer-logo">Luna Creates</title>
                <image xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/images/logo.svg" x="0" y="0" width="100%" height="100%"></image>
            </svg>
            <small class="footer__copyright">&copy; 2020, {{settings.name}}</small>
        </div>
    </div>
</footer>
