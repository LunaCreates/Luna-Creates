<header class="header pos-r" data-component="header">
    <a href="#nav" class="skip-link skip-link--hidden">Skip to navigation</a>
    <a href="#main" class="skip-link skip-link--hidden">Skip to main content</a>
    <a href="#footer" class="skip-link skip-link--hidden">Skip to footer</a>

    {% if cart %}
        <a href="#cart" class="skip-link skip-link--hidden">Skip to cart</a>
    {% endif %}

    <div class="container pos-r dp-f fd-c py-8 px-16 bgc-background zi-120 md:dp-g md:gtc-3 md:bgc-transparent">
        <a href="/" class="dp-b as-c md:gcs-2 md:js-c" data-logo>
            <svg class="logo dp-b" width="210" height="90" viewBox="0 0 210 90" aria-describedby="logo">
                <title id="logo">Luna Creates</title>
                <image xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/images/logo.svg" x="50%" y="0" width="100%" height="66.1"></image>
                <text x="50%" y="95%">Personalised map prints</text>
            </svg>
        </a>

        <div class="dp-n md:dp-f md:jc-end md:ai-c md:pos-r md:zi-20" data-component="search">
            {% include "_partials/components/search.njk" %}

            <a href="/cart/" class="header__cart pos-r md:order-3" aria-label="View cart" data-cart>
                <svg height="16" width="16" aria-hidden="true" class="">
                    <use xlink:href="/icons/sprite.svg#cart"></use>
                </svg>
            </a>
        </div>
    </div>

    <div class="dp-f jc-between ai-c pos-r py-8 px-5vw bgc-secondary zi-30 md:px-0 md:py-0 md:zi-110">
        {% include "_partials/navigation.njk" %}

        <div class="dp-f jc-between ai-c zi-20 md:dp-n" data-component="search">
            {% include "_partials/components/search.njk" %}

            <a href="/cart/" class="header__cart pos-r" aria-label="View cart" data-cart>
                <svg height="16" width="16" aria-hidden="true" class="header__icon" fill="var(--color-primary)">
                    <use xlink:href="/icons/sprite.svg#cart"></use>
                </svg>
            </a>
        </div>
    </div>
</header>
