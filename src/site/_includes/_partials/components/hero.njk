{% set image = heroImage or renderData.heroImage %}
{% set title = heroTitle or renderData.heroTitle %}

{% if post %}
    <header class="hero pos-r" aria-labelledby="hero-title">
{% else %}
    <section class="hero pos-r" aria-labelledby="hero-title">
{% endif %}
    <div class="hero__content">
    {% if post %}
        {% set imageWebP = image.split(r/(jpg|png)/g)[0] + 'webp' %}

        <picture class="ratio-3-2 md:ratio-4-1">
            <source media="(max-width: 37.4375em)" type="image/webp" data-srcset="{{imageWebP}}?nf_resize=fit&w=300&h=180 1x, {{imageWebP}}?nf_resize=fit&w=600&h=360 2x">
            <source media="(max-width: 37.4375em)" data-srcset="{{image}}?nf_resize=fit&w=300&h=180 1x, {{image}}?nf_resize=fit&w=600&h=360 2x">

            <source media="(min-width: 38em) and (max-width: 47.9375em)" type="image/webp" data-srcset="{{imageWebP}}?nf_resize=fit&w=400&h=240 1x, {{imageWebP}}?nf_resize=fit&w=800&h=480 2x">
            <source media="(min-width: 38em) and (max-width: 47.9375em)" data-srcset="{{image}}?nf_resize=fit&w=400&h=240 1x, {{image}}?nf_resize=fit&w=800&h=480 2x">

            <source type="image/webp" data-srcset="{{imageWebP}}?nf_resize=fit&w=1500&h=500 1x, {{imageWebP}}?nf_resize=fit&w=2048&h=640 2x">
            <img class="lazyload op-right" data-srcset="{{image}}?nf_resize=fit&w=1500&h=500 1x, {{image}}?nf_resize=fit&w=2048&h=640 2x" role="presentation" width="400" height="240" loading="lazy">

            <noscript>
                <source media="(max-width: 37.4375em)" type="image/webp" srcset="{{imageWebP}}?nf_resize=fit&w=300&h=180 1x, {{imageWebP}}?nf_resize=fit&w=600&h=360 2x">
                <source media="(max-width: 37.4375em)" srcset="{{image}}?nf_resize=fit&w=300&h=180 1x, {{image}}?nf_resize=fit&w=600&h=360 2x">

                <source media="(min-width: 38em) and (max-width: 47.9375em)" type="image/webp" srcset="{{imageWebP}}?nf_resize=fit&w=400&h=240 1x, {{imageWebP}}?nf_resize=fit&w=800&h=480 2x">
                <source media="(min-width: 38em) and (max-width: 47.9375em)" srcset="{{image}}?nf_resize=fit&w=400&h=240 1x, {{image}}?nf_resize=fit&w=800&h=480 2x">

                <source type="image/webp" srcset="{{imageWebP}}?nf_resize=fit&w=1500&h=500 1x, {{imageWebP}}?nf_resize=fit&w=2048&h=640 2x">
                <img class="op-right" srcset="{{image}}?nf_resize=fit&w=1500&h=500 1x, {{image}}?nf_resize=fit&w=2048&h=640 2x" role="presentation" width="400" height="240" loading="lazy">
            </noscript>
        </picture>
    {% else %}
            <picture class="ratio-3-2 md:ratio-4-1">
                <source media="(max-width: 37.4375em)" type="image/webp" data-srcset="{{image}}_300x180_crop_top.jpg.webp 1x, {{image}}_600x360_crop_top.jpg.webp 2x">
                <source media="(max-width: 37.4375em)" data-srcset="{{image}}_300x180_crop_top.jpg 1x, {{image}}_600x360_crop_top.jpg 2x">

                <source media="(min-width: 38em) and (max-width: 47.9375em)" type="image/webp" data-srcset="{{image}}_400x240_crop_top.jpg.webp 1x, {{image}}_800x480_crop_top.jpg.webp 2x">
                <source media="(min-width: 38em) and (max-width: 47.9375em)" data-srcset="{{image}}_400x240_crop_top.jpg 1x, {{image}}_800x480_crop_top.jpg 2x">

                <source type="image/webp" data-srcset="{{image}}_1500x500_crop_top.jpg.webp 1x, {{image}}_2048x640_crop_top.jpg.webp 2x">
                <img class="lazyload op-right" data-srcset="{{image}}_1500x500_crop_top.jpg 1x, {{image}}_2048x640_crop_top.jpg 2x" role="presentation" width="400" height="240" loading="lazy">

                <noscript>
                    <source media="(max-width: 37.4375em)" type="image/webp" srcset="{{image}}_300x180_crop_top.jpg.webp 1x, {{image}}_600x360_crop_top.jpg.webp 2x">
                    <source media="(max-width: 37.4375em)" srcset="{{image}}_300x180_crop_top.jpg 1x, {{image}}_600x360_crop_top.jpg 2x">

                    <source media="(min-width: 38em) and (max-width: 47.9375em)" type="image/webp" srcset="{{image}}_400x240_crop_top.jpg.webp 1x, {{image}}_800x480_crop_top.jpg.webp 2x">
                    <source media="(min-width: 38em) and (max-width: 47.9375em)" srcset="{{image}}_400x240_crop_top.jpg 1x, {{image}}_800x480_crop_top.jpg 2x">

                    <source type="image/webp" srcset="{{image}}_1500x500_crop_top.jpg.webp 1x, {{image}}_2048x640_crop_top.jpg.webp 2x">
                    <img class="op-right" srcset="{{image}}_1500x500_crop_top.jpg 1x, {{image}}_2048x640_crop_top.jpg 2x" role="presentation" width="400" height="240" loading="lazy">
                </noscript>
            </picture>
    {% endif %}
    </div>

    <div class="hero__container container pos-a w-full px-16 ta-c zi-20">
        {% if home %}
            <p class="hero__title mx-auto mb-0 text-background fs-lg lh-xl fvs-rg ta-center tt-uc" id="hero-title">
                <span class="hero__title-highlight bgc-foreground">{{title | safe}}</span>
            </p>
        {% else %}
            <h1 class="hero__title mx-auto mb-0 text-background fs-lg lh-xl fvs-rg ta-center tt-uc" id="hero-title">
                <span class="hero__title-highlight bgc-foreground">{{title | safe}}</span>
            </h1>
        {% endif %}
    </div>
{% if post %}
    </header>
{% else %}
    </section>
{% endif %}

{% if home %}
    <p class="hero__body container my-32 px-16 mx-auto fs-sm lh-sm fvs-rg ta-center md:my-56 lg:my-80">We help you to immortalise your travel adventures, whether youâ€™re finding new places to explore or reflecting on past adventures.</p>
{% endif %}
