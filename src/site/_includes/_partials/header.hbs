<header class="header">
    <a href="#nav" class="skip-link skip-link--hidden">Skip to navigation</a>
    <a href="#main" class="skip-link skip-link--hidden">Skip to main content</a>
    <a href="#footer" class="skip-link skip-link--hidden">Skip to footer</a>

    <div class="header__container">
        <a href="/" class="logo">
            <svg class="logo__icon" width="210" height="90" aria-describedby="logo">
                <title id="logo">Luna Creates</title>
                <image xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/images/logo.svg" x="50%" y="0" width="100%" height="66.1"></image>
                <text x="50%" y="95%">Personalised map prints</text>
            </svg>
        </a>
    </div>

    <div class="header__nav">
        <button class="header__menu">
            <svg class="header__menu-icon" width="16" height="16" aria-hidden="true">
                <use xlink:href="/icons/sprite.svg#menu"></use>
            </svg>

            Menu
        </button>

        <div class="header__options">
            <button class="header__search" aria-label="Search">
                <svg width="16" height="16" aria-hidden="true">
                    <use xlink:href="/icons/sprite.svg#search"></use>
                </svg>
            </button>

            <a href="/cart/" class="header__cart" aria-label="Search">
                <svg width="16" height="16" aria-hidden="true">
                    <use xlink:href="/icons/sprite.svg#cart"></use>
                </svg>
            </a>
        </div>
    </div>
</header>
