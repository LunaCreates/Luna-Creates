<div class="modal" role="dialog" aria-labelledby="dialog-title" data-modal="image-zoom" hidden>
    <div class="modal__inner">
        <h2 class="modal__title" id="dialog-title">Image zoom</h2>

        <div class="modal__picture" data-product-picture>
            <img data-srcset="{{product.mainImage}}.jpg" class="modal__image lazyload" role="presentation" data-product-image>
        </div>

        <div class="modal__image-zoom" data-bg="{{product.mainImage}}.jpg" data-image-zoom></div>

        <button class="modal__close-button" aria-label="Close dialog" data-close-modal>
            <svg height="24" width="24" aria-hidden="true" class="modal__close-icon">
                <use xlink:href="/icons/sprite.svg#close"></use>
            </svg>
        </button>
    </div>
</div>
