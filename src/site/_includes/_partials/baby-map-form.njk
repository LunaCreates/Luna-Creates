{% set variant = product.options[0] %}

<form class="product__form" data-product-form data-variant-id="{{variant.id}}">
    <div class="product__field">
        <label for="baby-name" class="product__label">Baby's name</label>
        <input type="text" name="baby name" class="product__input" id="baby-name" required>
    </div>

    <div class="product__field">
        <label for="birth-date" class="product__label">Date of Birth</label>
        <input type="text" name="birth date" class="product__input" id="birth-date" required>
    </div>

    <div class="product__field">
        <label for="birth-time" class="product__label">Date of Birth</label>
        <input type="text" name="birth time" class="product__input" placeholder="(Optional)" id="birth-time">
    </div>

    <div class="product__field">
        <label for="birth-weight" class="product__label">Birth Weight</label>
        <input type="text" name="birth weight" class="product__input" placeholder="(Optional)" id="birth-weight">
    </div>

    <div class="product__field">
        <label for="pin-colour" class="product__label">Select Pin Colour</label>
        <div class="product__select-wrapper">
            <select name="pin colour" id="pin-colour" class="product__select" required>
                <option value="Pink">Pink</option>
                <option value="Blue">Blue</option>
            </select>
            <svg class="product__select-icon" width="24" height="24" aria-hidden="true">
                <use xlink:href="/icons/sprite.svg#chevron"></use>
            </svg>
        </div>
    </div>

    <div class="product__field">
        <label for="name-colour" class="product__label">Text Background Colour - Name</label>
        <div class="product__select-wrapper">
            <select name="text background colour - name" id="name-colour" class="product__select" required>
                <option value="Pink">Pink</option>
                <option value="Navy">Navy</option>
                <option value="Mint">Mint</option>
            </select>
            <svg class="product__select-icon" width="24" height="24" aria-hidden="true">
                <use xlink:href="/icons/sprite.svg#chevron"></use>
            </svg>
        </div>
    </div>

    <div class="product__field">
        <label for="alt-colour" class="product__label">Text Background Colour - Name</label>
        <div class="product__select-wrapper">
            <select name="text background colour - date, time, weight" id="alt-colour" class="product__select" required>
                <option value="Pink">Pink</option>
                <option value="Navy">Navy</option>
                <option value="Mint">Mint</option>
            </select>
            <svg class="product__select-icon" width="24" height="24" aria-hidden="true">
                <use xlink:href="/icons/sprite.svg#chevron"></use>
            </svg>
        </div>
    </div>

    <div class="product__field">
        <label for="quantity" class="product__label">Quantity</label>
        <input type="number" id="quantity" name="quantity" value="1" min="1" class="product__input product__input--quantity" pattern="[0-9]*">
    </div>

    <button type="submit" class="product__basket-button" aria-live="polite">Add to basket</button>
</form>
