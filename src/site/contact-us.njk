---
title: 'Contact us'
changefreq: monthly
priority: 1
layout: _layouts/default
---

<main id="main">
    <div class="page page--container" id="contact">
        <h1 class="page__title">{{contact.title}}</h1>

        <div class="page__rte">
            {{contact.body | safe}}
        </div>

        <form class="form" name="contact" method="post" action="/contact-us/#contact" data-component="contact-form" netlify-honeypot="bot-field" netlify>
            <fieldset class="form__fieldset">
                <legend class="form__legend">Enter your name, email, optional phone number and your message.</legend>

                <div class="form__inner">
                    <div class="form__field form__field--hidden">
                        <label>Donâ€™t fill this out if you're human:</label>
                        <input type="text" name="bot-field" />
                    </div>

                    <div class="form__field">
                        <label class="form__label" id="nameLabel" for="name">Name</label>
                        <input class="form__input" id="name" type="text" name="name" aria-required="true" aria-labelledby="nameLabel" aria-describedby="nameDescribe" pattern="^[a-zA-Z \-']+$" required data-input>
                        <small class="form__validation-message" id="nameDescribe" data-validation>Your name is required</small>
                    </div>

                    <div class="form__field">
                        <label class="form__label" id="emailLabel" for="email">Email</label>
                        <input class="form__input" id="email" type="email" name="email" aria-required="true" aria-labelledby="emailLabel" aria-describedby="emailDescribe" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$" required data-input>
                        <small class="form__validation-message" id="emailDescribe" data-validation>Please enter a valid email address</small>
                    </div>

                    <div class="form__field">
                        <label class="form__label" id="phoneLabel" for="phone">Phone Number (optional)</label>
                        <input class="form__input" id="phone" type="tel" name="phone" aria-labelledby="phoneLabel" aria-describedby="phoneDescribe" pattern="[0-9\-]*">
                    </div>

                    <div class="form__field">
                        <label class="form__label" id="messageLabel" for="message">Message</label>
                        <textarea class="form__textarea" id="message" name="message" name="message" rows="6" cols="80" aria-required="true" aria-labelledby="messageLabel" aria-describedby="messageDescribe" required data-textarea></textarea>
                        <small class="form__validation-message" id="messageDescribe" data-validation>Please enter your message</small>
                    </div>
                    <button class="form__button" type="submit" name="button" data-submit-button>Submit form</button>
                </div>

                <span class="form__message form__message--error" data-form-error>Oops. There was an error. Please submit the form again.</span>
                <span class="form__message form__message--success" data-form-success>Hooray. Your message has been successfully sent.</span>
            </fieldset>
        </form>
    </div>
</main>
