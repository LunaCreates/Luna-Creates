---
pagination:
    data: categories
    size: 1
    alias: category
    addAllPagesToCollections: true
renderData:
  title: "{{category.title}}"
  heroTitle: "{{category.title}}"
  heroImage: "{{category.heroImage}}"
permalink: "collections/{{category.slug}}/"
layout: _layouts/default
sitemap:
  changefreq: daily
  priority: 1
---

{% include "_partials/hero.njk" %}

<main id="main">
    <ul class="products products--container">
        {% for product in category.products %}
        <li class="products__product">
            <picture class="featured__picture">
                <source type="image/webp" data-srcset="{{product.mainImage}}_300x300.jpg.webp 1x, {{product.mainImage}}_350x350.jpg.webp 2x">

                <img data-srcset="{{product.mainImage}}_300x300.jpg 1x, {{product.mainImage}}_350x350.jpg 2x" alt="{{product.mainImageAlt}}" class="featured__image lazyload" loading="lazy" width="300" height="300">

                <noscript>
                    <source type="image/webp" srcset="{{product.mainImage}}_300x300.jpg.webp 1x, {{product.mainImage}}_350x350.jpg.webp 2x">

                    <img srcset="{{product.mainImage}}_300x300.jpg 1x, {{product.mainImage}}_350x350.jpg 2x" alt="{{product.mainImageAlt}}" class="featured__image" loading="lazy" width="300" height="300">
                </noscript>
            </picture>
            <a class="featured__link" href="{{product.slug}}">{{product.title}}</a>
            <span class="featured__price">{{product.price}}</span>
        </li>
        {% endfor %}
    </ul>
</main>


